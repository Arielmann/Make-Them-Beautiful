<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_marginRight="10dp">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:textSize="16sp" android:text=""
        android:layout_alignParentTop="true"
        android:id="@+id/textSenderName"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/md_grey_50"
        android:paddingBottom="6dp"
        android:textSize="12sp"
        android:text=""
        android:id="@+id/txtDate"
        android:layout_alignBottom="@+id/textSenderName"
        android:paddingRight="2dp"
        android:layout_alignParentRight="true"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSenderName"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:background="@drawable/grey_bubble"
        android:padding="12dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:paddingLeft="12dp"
        android:textSize="14sp"
        android:text="Hello"
        android:id="@+id/presentedTextLeft"/>

</RelativeLayout>

</RelativeLayout>

</RelativeLayout>